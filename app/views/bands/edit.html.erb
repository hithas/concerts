<h1>Editing Band #<%= @band.id %></h1>

<form action="/bands/<%= @band.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @band.name  %>" type="text" />
  </div>
  <div>
    <label for="genre">genre</label><br />
    <input id="genre" name="genre" value="<%= @band.genre  %>" type="text" />
  </div>
  <div>
    <label for="nom">nom</label><br />
    <input id="nom" name="nom" value="<%= @band.nom  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


